{
  "name": "Jcomplaint-register",
  "version": "1.0.0",
  "description": "Complaint Register + Monthly Reports (Pending/Complete)",
  "main": "main.js",
  "author": "Your Company",
  "license": "MIT",
  "scripts": {
  "start": "electron .",
  "build": "electron-builder --win --x64",
  "dist": "electron-builder --win --x64"
},
  "dependencies": {
    "better-sqlite3": "^11.7.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.jayasan.complaintregister",
    "productName": "Complaint Register",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "publish": "never",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}

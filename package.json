{
  "name": "Jcomplaint-register",
  "version": "1.2.0",
  "description": "Complaint Register + Monthly Reports (Pending/Complete) - Light UI",
  "main": "main.js",
  "author": "jayasan.com",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.17.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.jayasan.complaintregister",
    "productName": "Complaint Register",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
